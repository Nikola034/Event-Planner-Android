<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Zadatak2" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>
        <item name="colorSecondary">@color/accent_color</item>
        <item name="materialCardViewFilledStyle">@style/Card.Night</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="Secondary.Button.Primary.Text" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>
    <style name="Card.Night" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">@color/surface_card</item>
        <item name="android:shadowColor">@color/primary_color</item>
    </style>
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/primary_color</item>
        <item name="android:progressBackgroundTint">@color/primary_color</item>
    </style>

</resources>